<div class="container-fluid">
    <%= form_with(url:admins_backoffice_pesquisa_vaso_path, local: true, method: :get, class: "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search") do |form| %>
        <div class="form-group row">        
            <div class="col-lg-4">
                <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @vasos.model_name.human(count: @vasos.count)) %> </h1>
            </div>
            <div class="col-lg-2">
                <div class="input-group">      
                    <%= form.text_field :num_serie, class:"form-control bg-light border-0 small", placeholder: "# série...", style: "width: 150px;" %>
                </div>
            </div>
            
            <div class="col-lg-3">
                <div class="input-group">      
                    <%= form.collection_select :proprietaria_id, @proprietarios, :id, :nome_curto, {include_blank: true }, {style: "width: 150px;", class:"form-control"} %>
                </div>
            </div>           
            
            <div class="col-lg-3">                    
                <div class="input-group">                    
                    <%= form.collection_select :corp_id, @corps, :id, :nome, {include_blank: true }, {style: "width: 120px;", class:"form-control"} %>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                    
                </div>
            </div>
        </div>
    <%end%>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th><%= traduz_atributos_humanos(@vasos, :user_id) %> </th>
                <th><%= traduz_atributos_humanos(@vasos, :num_serie) %> </th>               
                <th><%= traduz_atributos_humanos(@vasos, :fabricante_id) %> </th>
                <th><%= traduz_atributos_humanos(@vasos, :proprietaria_id) %> </th>
                <th>
                    <%= link_to  new_admins_backoffice_vaso_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @vasos.each do |v|%>
                <tr>
                    <td><%= v.id %></td>
                    <% if !v.user.blank? %>
                        <td><%= v.user.nome_completo.truncate(10) %></td>
                    <% else %>
                        <td>Sem usuário</td>
                    <% end %>
                    <td><%= v.num_serie %></td>
                    <td><%= v.fabricante.nome_curto.truncate(30) %></td>
                    <td><%= v.proprietaria.nome_curto %></td>

                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_vaso_path(v.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_vaso_path(v.id), 
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: v.num_serie)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @vasos %>
    
</div>