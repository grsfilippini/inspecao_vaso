
<!-- Se tiver algum erro dentro de @admin, erro devido a processo de salvamento por exemplo, entra no alerta abaixo -->
<% if @inspetor.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>        
        <ul>
            <% @inspetor.errors.full_messages.each do |message| %>
            <li> <%= message -%> </li>
            <% end %>
        </ul>
    </div>
<% end %>
       
 <div class="col-lg-6">
   <div class="card">
     <div class="card-body">
       <h5 class="card-title">Dados do Inspetor</h5>
       <!-- Horizontal Form -->
       <%= form_with(model: [ :admins_backoffice, @inspetor ], autocomplete: "off", local: true) do |form| %>
         <div class="row mb-3">
           <label for="inputNome" class="col-sm-2 col-form-label">Nome</label>
           <div class="col-sm-10">                                        
             <%= form.text_field :nome, class:"form-control" %>               
           </div>
         </div>        
         <div class="row mb-3">
           <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
           <div class="col-sm-10">
             <%= form.text_field :email, class:"form-control" %>
           </div>
         </div>
         <div class="row mb-3">
           <label for="inputPassword3" class="col-sm-2 col-form-label">Senha</label>
           <div class="col-sm-10">                    
             <%= form.password_field :password, autocomplete: "new-password", class:"form-control" %>
           </div>
         </div>
         <div class="row mb-3">
           <label for="inputPassword3" class="col-sm-2 col-form-label">Confirma senha</label>
           <div class="col-sm-10">                    
             <%= form.password_field :password_confirmation, class:"form-control" %>
           </div>
         </div>                
         
         <div class="text-center">                  
           <button type="submit" class="btn btn-primary"><%=t('botoes.gravar')%></button>
         </div>
         
       <%end%>

     </div>
   </div>
 </div>