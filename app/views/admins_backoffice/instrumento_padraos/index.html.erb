<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @instrumento_padraos.model_name.human(count: @instrumento_padraos.count)) %> </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Nome </th>
                <th>Descrição </th>
                <th>
                    <%= link_to  new_admins_backoffice_instrumento_padrao_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @instrumento_padraos.each do |d|%>
                <tr>
                    <td><%= d.id %></td>
                    <td><%= d.nome_curto %></td>
                    <td><%= d.descricao %></td>
                    
                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_instrumento_padrao_path(d.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_instrumento_padrao_path(d.id), 
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: d.nome_curto)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @instrumento_padraos %>
    
</div>