<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"> <%= action_messege %> </h1>
</div>

<!-- Se tiver algum erro dentro de @admin, erro devido a processo de salvamento por exemplo, entra no alerta abaixo -->
<% if @art.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>        
        <ul>
            <% @art.errors.full_messages.each do |message| %>
            <li> <%= message -%> </li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with(model: [ :admins_backoffice, @art ], local: true) do |form| %>

    <div class="form-group row">
        <p><b>USU√ÅRIO</b></p>
        <div class="col-sm-6 mb-3 mb-sm-0">            
            <%= form.collection_select(:user_id, @users, :id, :nome_completo, { include_blank: true }, {selected: nil, style: 'width: 300px;'}) %>            
        </div>        
    </div>

    <div class="form-group row">        
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :art %>
            <%= form.text_field :art %>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">                                           
            <%= form.label :cadastro_id %>            
            <%= form.collection_select :cadastro_id, @cadastros, :id, :nome_curto %>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">                                           
            <%= form.label :ph_id %>            
            <%= form.collection_select :ph_id, @phs, :id, :nome %>
        </div>
                
    </div>

    <div class="form-group row">
        
    </div>    
    
    <button type="submit" class="btn btn-primary"><%=t('botoes.gravar')%></button>

    <hr>    
<% end %>