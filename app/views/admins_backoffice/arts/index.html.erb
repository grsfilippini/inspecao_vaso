<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @arts.model_name.human(count: @arts.count)) %> </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Usuário</th>
                <th><%= traduz_atributos_humanos(@arts, :art) %> </th>
                <th>Cliente</th>
                <th>Prof. habilitado</th>
                <th>
                    <%= link_to  new_admins_backoffice_art_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @arts.each do |a|%>
                <tr>
                    <td><%= a.id %></td>
                    <% if !a.user.blank? %>
                        <td><%= a.user.nome_completo.truncate(30) %></td>
                    <% else %>
                        <td>Sem usuário</td>
                    <% end %>
                    <td><%= a.art %></td>
                    <td><%= a.cadastro.nome_curto.truncate(30) %></td>
                    <td><%= a.ph.nome.truncate(30) %></td>

                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_art_path(a.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_art_path(a.id), 
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: a.art)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @arts %>

</div>