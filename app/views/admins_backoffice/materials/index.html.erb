<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @materials.model_name.human(count: @materials.count)) %> </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Descrição</th>                
                <th>
                    <%= link_to  new_admins_backoffice_material_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @materials.each do |d|%>
                <tr>
                    <td><%= d.id %></td>
                    <td><%= d.descricao %></td>
                    
                    <td style="width: 50px">
                        <%= link_to edit_admins_backoffice_material_path(d.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @materials %>
    
</div>