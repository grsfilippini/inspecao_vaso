<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @users.model_name.human(count: @users.count)) %> </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Nome completo</th>
                <th>e-mail</th>
                <th>
                    <%= link_to  new_admins_backoffice_user_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @users.each do |u|%>
                <tr>
                    <td><%= u.id %></td>
                    <td><%= u.nome_completo.truncate(30) %></td>
                    <td><%= u.email %></td>

                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_user_path(u.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_user_path(u.id), 
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: u.nome_completo)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @users %>
    
</div>