<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @relatorio_dispsegs.model_name.human(count: @relatorio_dispsegs.count)) %> </h1>

    <%= form_with(url:admins_backoffice_pesquisa_relatorio_dispseg_path, local: true, method: :get) do |form| %>
        <div class="row">
        
            <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                <div class="input-group">      
                    <%= form.text_field :serie_dispseg, class:"form-control bg-light border-0 small", placeholder: "# série disp. segurança ..." %>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                <div class="input-group">      
                    <%= form.text_field :serie_vaso, class:"form-control bg-light border-0 small", placeholder: "# série vaso ..." %>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    <%end%>
</div> <!-- FIM DO CONTAINER DO FORM -->

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Data</th>
                <th>Disp. Segurança</th>
                <th>Vaso</th>
                <th>Proprietária</th>
                <th>
                    <%= link_to  new_admins_backoffice_relatorio_dispseg_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @relatorio_dispsegs.each do |r|%>
                <tr>
                    <td><%= r.id %></td>
                    <td><%= r.data %></td>
                    <td><%= r.disp_seguranca.serie %></td>
                    <td><%= r.vaso.num_serie %></td>
                    <td><%= r.cadastro.nome_curto %></td>
                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_relatorio_dispseg_path(r.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_relatorio_dispseg_path(r.id), 
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: r.id)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @relatorio_dispsegs %>
    
</div>