<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"> <%= action_messege %> </h1>
</div>

<!-- Se tiver algum erro dentro de @admin, erro devido a processo de salvamento por exemplo, entra no alerta abaixo -->
<% if @ph.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>        
        <ul>
            <% @ph.errors.full_messages.each do |message| %>
            <li> <%= message -%> </li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with(model: [ :admins_backoffice, @ph ], local: true) do |form| %>
    
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :nome %>
            <%= form.text_field :nome, placeholder: t('placeholders.entre_nome_do_ph')%>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :titulo %>
            <%= form.text_field :titulo %>
        </div>        
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :crea %>
            <%= form.text_field :crea %>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :cpf %>
            <%= form.text_field :cpf %>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :rg %>
            <%= form.text_field :rg %>
        </div>        
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :endereco %>
            <%= form.text_field :endereco %>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :bairro %>
            <%= form.text_field :bairro %>
        </div>        
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :cidade %>
            <%= form.text_field :cidade %>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :uf %>
            <%= form.text_field :uf %>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :cep %>
            <%= form.text_field :cep %>
        </div>        
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :fone %>
            <%= form.text_field :fone %>
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= form.label :email %>
            <%= form.text_field :email %>
        </div>                
    </div>

    <button type="submit" class="btn btn-primary"><%=t('botoes.gravar')%></button>

    <hr>    
<% end %>