<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @phs.model_name.human(count: @phs.count)) %> </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th><%= traduz_atributos_humanos(@phs, :nome) %> </th>
                <th>Crea</th>
                <th>
                    <%= link_to  new_admins_backoffice_ph_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @phs.each do |pf|%>
                <tr>
                    <td><%= pf.id %></td>
                    <td><%= pf.nome.truncate(30) %></td>
                    <td><%= pf.crea %></td>

                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_ph_path(pf.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_ph_path(pf.id), 
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: pf.nome)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @phs %>
    
</div>
