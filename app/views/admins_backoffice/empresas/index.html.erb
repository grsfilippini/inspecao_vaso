<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @empresas.model_name.human(count: @empresas.count)) %> </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Empresa</th>
                <th>Corporação</th>
                <th>e-mail</th>
                <th>
                    <%= link_to  new_admins_backoffice_empresa_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @empresas.each do |e|%>
                <tr>
                    <td><%= e.id %></td>
                    <td><%= e.nome %></td>
                    <td><%= e.corp.nome %></td>
                    <td><%= e.email %></td>

                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_empresa_path(e.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_empresa_path(e.id), 
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: e.nome)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @empresas %>    
</div>