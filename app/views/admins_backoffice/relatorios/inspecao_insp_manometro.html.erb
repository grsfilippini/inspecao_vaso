                        <%= form_with(model: [ :admins_backoffice, @relatorio ], local: true, :html => { :multipart => true }) do |form| %>
                        
                            <%= render partial: 'admins_backoffice/relatorios/shared/botoes_navegacao' %>
                        
                            <div class="form-group row">
                                <div class="form-check col-sm-6 mb-0 mb-sm-0 d-inline">
                                    <%= form.check_box :bpossui_manometro_ousimilar, class: "form-check-input", id: "ExisteManometroCheckbox" %>
                                    <%= form.label :bpossui_manometro_ousimilar, "Existe manômetro", class: "form-check-label", for: "ExisteManometroCheckbox" %>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="form-check col-sm-6 mb-0 mb-sm-0 d-inline">
                                    <%= form.check_box :bmanometro_ehmantido_calibrado_eemboas_condicoes_operacao, class: "form-check-input", id: "ManometroBoasCondicoesCheckbox" %>
                                    <%= form.label :bmanometro_ehmantido_calibrado_eemboas_condicoes_operacao, "É mantido calibrado e em boas condições", class: "form-check-label", for: "ManometroBoasCondicoesCheckbox" %>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="form-check col-sm-6 mb-0 mb-sm-0 d-inline">
                                    <%= form.check_box :bman_tem_sinais_manutencao, class: "form-check-input", id: "ManometroSinaisManCheckbox" %>
                                    <%= form.label :bman_tem_sinais_manutencao, "Tem sinais de manutenção", class: "form-check-label", for: "ManometroSinaisManCheckbox" %>
                                </div>
                            </div>                            
                            
                            <div class="form-group row">
                                <div class="form-check col-sm-6 mb-0 mb-sm-0 d-inline">
                                    <%= form.check_box :bman_foi_substituido, class: "form-check-input", id: "ManometroSubInsCheckbox" %>
                                    <%= form.label :bman_foi_substituido, "Foi substituído/instalado", class: "form-check-label orange-label", for: "ManometroSubInsCheckbox" %>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="form-check col-sm-6 mb-0 mb-sm-0 d-inline">
                                    <%= form.check_box :bman_foifeito_ajuste, class: "form-check-input", id: "ManFeitoAjusteCheckbox" %>
                                    <%= form.label :bman_foifeito_ajuste, "Foi feito ajuste", class: "form-check-label orange-label", for: "ManFeitoAjusteCheckbox" %>
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <div class="form-check col-sm-6 mb-0 mb-sm-0 d-inline">
                                    <%= form.check_box :bman_foifeita_calibracao, class: "form-check-input", id: "ManFoiCalibradoCheckbox" %>
                                    <%= form.label :bman_foifeita_calibracao, "Foi calibrado", class: "form-check-label orange-label", for: "ManFoiCalibradoCheckbox" %>
                                </div>
                            </div>                            
                            
                            <div class="form-group row">                                
                                <%= form.label :manometro_observacoes, 'Obs.', {class: "col-sm-1 col-form-label text-sm-left text-lg-right"} %>
                                <div class="form-check col-sm-6 mb-0 mb-sm-0">
                                    <%= form.text_field :manometro_observacoes, class: "form-control"  %>
                                </div>
                            </div>
                                
                           
                            
                            <hr>
                            
                            <br> <br>
                            
                            <%= button_tag "Gravar e Voltar", type: "submit", class: "btn btn-primary", name: "btn_insp_instalacoes" %>
                            <%= button_tag "Gravar e Sair", type: "submit", class: "btn btn-primary", name: "btn_gravar_sair" %>
                            <%= button_tag "Gravar e Avançar", type: "submit", class: "btn btn-primary", name: "btn_insp_dispseg" %>
                                                        
                        <% end %>                                                                     

