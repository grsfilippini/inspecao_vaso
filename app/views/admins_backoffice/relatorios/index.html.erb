<div class="col-lg-4">
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @relatorios.model_name.human(count: @relatorios.count)) %> </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Usuário</th>
                <th># série</th>
                <th>Fabricante</th>
                <th>Proprietaria</th>
                <th>
                    <%= link_to  '#', class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @relatorios.each do |r|%>
                <tr>
                    <td><%= r.id %></td>
                    <% if !r.user.blank? %>
                        <td><%= r.user.nome_completo.truncate(10) %></td>
                    <% else %>
                        <td>Sem usuário</td>
                    <% end %>
                    <td><%= r.vaso.num_serie %></td>
                    <td><%= r.vaso.fabricante.nome_curto.truncate(20) %></td>
                    <td><%= r.proprietaria.nome_curto %></td>

                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_relatorio_path(r.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_relatorio_path(r.id), 
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: r.id)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @relatorios %>
    
</div>