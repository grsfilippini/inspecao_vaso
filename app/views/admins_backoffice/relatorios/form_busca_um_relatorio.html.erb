<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <!-- div class="col-lg-5 d-none d-lg-block bg-register-image"></div -->
                
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Editar Relatório</h1>
                        </div>

                        <%= form_tag admins_backoffice_edita_um_relatorio_path, method: :get do %>
                          <div class="form-group row">
                            <div class="col-sm-3 mb-0 mb-sm-0">
                              <%= number_field_tag :id, nil, placeholder: "Digite o ID do Relatório", class: "form-control" %>
                            </div>
                            <div class="col-sm-1 mb-0 mb-sm-0">
                              <%= submit_tag "Editar", class: "btn btn-primary" %>
                            </div>
                          </div>
                        <% end %>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- FIM DO CONTAINER DO FORM -->