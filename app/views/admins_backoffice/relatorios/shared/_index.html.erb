<div class="col-lg-12">    
    <%= form_with(url:admins_backoffice_pesquisa_relatorio_path, local: true, method: :get, class: "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search") do |form| %>    
        <div class="form-group row">
            <div class="col-lg-4">
                <h1 class="h3 mb-4 text-gray-800">Lista de Relatórios -  <%= @nome_rel %> - <%= @relatorios.total_count %> </h1>
            </div>
            
            <div class="col-lg-2">
                <div class="input-group">      
                    <%= form.text_field :num_serie, class:"form-control bg-light border-0 small", placeholder: "# série...", style: "width: 150px;" %>
                </div>
            </div>
            
            <div class="col-lg-3">                    
                <div class="input-group">                    
                    <%= form.collection_select :proprietaria_id, @proprietarias, :id, :nome_curto, {include_blank: true }, {style: "width: 150px;", class:"form-control"} %>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                    
                </div>
            </div>
        </div>
    <%end%>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Usuário</th>
                <th># série</th>
                <th>Fabricante</th>
                <th>Proprietaria</th>
                <th>
                    <%= link_to  '#', class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @relatorios.each do |r|%>
                <tr>
                    <td><%= r.id %></td>
                    <% if !r.user.blank? %>
                        <td><%= r.user.nome_completo.truncate(10) %></td>
                    <% else %>
                        <td>Sem usuário</td>
                    <% end %>
                    <td><%= r.vaso.num_serie %></td>
                    <td><%= r.vaso.fabricante.nome_curto.truncate(20) %></td>
                    <td><%= r.proprietaria.nome_curto %></td>

                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_relatorio_path(r.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_relatorio_path(r.id), 
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: r.id)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @relatorios %>
    
</div>