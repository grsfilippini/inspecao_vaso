// Atualiza campos na página de estatísticas sem dar um refresh no html
var cel_usuarios = document.getElementById("cel_total_usuarios");
var cel_cadastros = document.getElementById("cel_total_cadastros");
var cel_vasos = document.getElementById("cel_total_vasos");
var cel_dispsegs = document.getElementById("cel_total_dispsegs");
var cel_relatorios = document.getElementById("cel_total_relatorios");
var cel_espessura_vasos = document.getElementById("cel_total_espessura_vasos");
var cel_rel_dispsegs = document.getElementById("cel_total_rel_dispsegs");

cel_usuarios.textContent = "<%= @num_usuarios %>";
cel_cadastros.textContent = "<%= @num_cadastros %>";
cel_vasos.textContent = "<%= @num_vasos %>";
cel_dispsegs.textContent = "<%= @num_dispsegs %>";
cel_relatorios.textContent = "<%= @num_relatorios %>";
