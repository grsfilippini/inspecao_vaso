<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @corps.model_name.human(count: @corps.count)) %></h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Usuário</th>
                <th><%= traduz_atributos_humanos(@corps, :corporacao) %> </th>
                <th>
                    <%= link_to  new_admins_backoffice_corp_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @corps.each do |corp|%>                                                                              
                <tr>
                    <td><%= corp.id %></td>
                    <% if !corp.user.blank? %>
                        <td><%= corp.user.nome_completo.truncate(30) %></td>
                    <% else %>
                        <td>Sem usuário</td>
                    <% end %>
                    <td><%= corp.nome %></td>                    
                    <td style="width: 100px">
                        <!-- <a href="#" class="btn btn-info btn-circle btn-sm"> <i class="fas fa-edit"></i> </a> -->
                        <%= link_to edit_admins_backoffice_corp_path(corp.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_corp_path(corp.id),
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: corp.nome)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @corps %>
    
</div>
    
