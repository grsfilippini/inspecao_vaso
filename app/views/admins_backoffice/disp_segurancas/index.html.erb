<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @disp_segurancas.model_name.human(count: @disp_segurancas.count)) %> </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Usu√°rio</th>
                <th><%= traduz_atributos_humanos(@disp_segurancas, :serie) %> </th>
                <th><%= traduz_atributos_humanos(@disp_segurancas, :cadastro) %></th>
                <th><%= traduz_atributos_humanos(@disp_segurancas, :tipo_dispositivo_seguranca) %></th>
                <th>
                    <%= link_to  new_admins_backoffice_disp_seguranca_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @disp_segurancas.each do |a|%>
                <tr>
                    <td><%= a.id %></td>
                    <td><%= a.user.nome %></td>
                    <td><%= a.serie %></td>
                    <td><%= a.cadastro.nome_curto.truncate(30) %></td>
                    <td><%= a.tipo_dispositivo_seguranca.nome.truncate(30) %></td>
                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_disp_seguranca_path(a.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_disp_seguranca_path(a.id),
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: a.serie)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @disp_segurancas %>

</div>

