<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @cadastros.model_name.human(count: @cadastros.count)) %> </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Usuário</th>
                <th><%= traduz_atributos_humanos(@cadastros, :nome_curto) %> </th>
                <th><%= traduz_atributos_humanos(@cadastros, :corp_id) %> </th>
                <th>
                    <%= link_to  new_admins_backoffice_cadastro_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @cadastros.each do |cad|%>                                                                              
                <tr>
                    <td><%= cad.id %></td>
                    <% if !cad.user.blank? %>
                        <td><%= cad.user.nome_completo.truncate(30) %></td>
                    <% else %>
                        <td>Sem usuário</td>
                    <% end %>
                    <td><%= cad.nome_curto.truncate(30) %></td>
                    <td><%= cad.corp.nome %></td>

                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_cadastro_path(cad.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_cadastro_path(cad.id), 
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: cad.nome_curto)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @cadastros %>
    
</div>
    
