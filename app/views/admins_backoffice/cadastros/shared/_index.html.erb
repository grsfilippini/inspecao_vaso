<div class="container-fluid">
    <%= form_with(url:admins_backoffice_pesquisa_cadastro_path, local: true, method: :get, class: "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search") do |form| %>
        <div class="form-group row">        
            <div class="col-lg-4">
                <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @cadastros.model_name.human(count: @cadastros.count)) %> </h1>
            </div>
            <div class="col-lg-4">
                <div class="input-group">      
                    <%= form.text_field :termo_nome, class:"form-control bg-light border-0 small", placeholder: "Nome curto ...", style: "width: 150px;" %>
                </div>
            </div>
            
            <div class="col-lg-4">                    
                <div class="input-group">                    
                    <%= form.collection_select :corp_id, @corps, :id, :nome, {include_blank: true }, {style: "width: 120px;", class:"form-control"} %>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                    
                </div>
            </div>
        </div>
    <%end%>
</div>


<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th>Usuário</th>
                <th><%= traduz_atributos_humanos(@cadastros, :nome_curto) %> </th>
                <th><%= traduz_atributos_humanos(@cadastros, :corp_id) %> </th>
                <th>
                    <%= link_to  new_admins_backoffice_cadastro_path, class:"btn btn-success btn-circle btn-sm" do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @cadastros.each do |cad|%>                                                                              
                <tr>
                    <td><%= cad.id %></td>
                    <% if !cad.user.blank? %>
                        <td><%= cad.user.nome_completo.truncate(10) %></td>
                    <% else %>
                        <td>Sem usuário</td>
                    <% end %>
                    <td><%= cad.nome_curto %></td>
                    <td><%= cad.corp.nome %></td>

                    <td style="width: 100px">
                        <%= link_to edit_admins_backoffice_cadastro_path(cad.id), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>
                        <%= link_to admins_backoffice_cadastro_path(cad.id), 
                                    method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: cad.nome_curto)} do %>
                            <i class="fas fa-minus"></i> 
                        <%end%>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @cadastros %>
    
</div>
    
