<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"> <%= action_messege %> </h1>
</div>


<!-- Se tiver algum erro dentro de @admin, erro devido a processo de salvamento por exemplo, entra no alerta abaixo -->
<% if @cidade.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>        
        <ul>
            <% @cidade.errors.full_messages.each do |message| %>
            <li> <%= message -%> </li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with(model: [ :admins_backoffice, @cidade ], local: true) do |form| %>

    <div class="form-group row">                
        <div class="col-sm-6 mb-3 mb-sm-0">
            <%= tag.div tag.p(t('placeholders.instrucoes_nome cidade'))%>
            <%= form.label :nome %>
            <%= form.text_field :nome, placeholder: t('placeholders.entre_nome cidade')%>
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary"><%=t('botoes.gravar')%></button>

    <hr>    
<% end %>