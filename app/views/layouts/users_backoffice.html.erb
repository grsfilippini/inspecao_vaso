    <!-- Modal -->
    <div class="modal fade" id="avatarModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <!-- a opção model:, serve para extrair o modelo do qual deseja-se que o formulário seja. 
               No caso abaixo, o current_user servirá apenas para extrair o model, ou seja, os campos. -->
          <%= form_with(url: users_backoffice_perfil_path, model: current_user, autocomplete: "off", local: false, html: { method: :patch }) do |form| %>
            <div class="modal-header">
              <h4 class="modal-title">Foto usuário</h4>
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>            
            </div>
            <div class="modal-body">
              <%= form.fields_for :perfil_usuario do |perfil_form| %>
                <div class="form-group">
                    <%= perfil_form.label :avatar %>
                    <%= image_tag(avatar_user_url, alt:"...", class:"img-circle profile_img", id:"AvatarModal") %>
                    <%= perfil_form.file_field :avatar %>
                </div>
              <% end %>
            </div>
            <div class="modal-footer">              
              <%= form.submit("Enviar", class: "btn btn-primary") %>
            </div>
          <% end %>  
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


    <%= javascript_include_tag 'application' %>
