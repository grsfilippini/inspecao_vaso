<div>  
  <a class="hiddenanchor" id="signin"></a>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          <h1>Mudar sua senha</h1>

          <div>            
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres no mínimo)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control", placeholder:"Nova senha" %>
          </div>
        
          <div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirmação da senha" %>
          </div>
                    
          <div class="text-center">
            <div style="display: inline-block;">
              <%= f.submit "Cadastrar nova senha", class:"btn btn-default btn-success submit" %>
            </div>
          </div>

          <div class="clearfix"></div>

          <div class="separator"></div>
        <%end%>
        <%= render "users/shared/links" %>
      </section>
    </div>    
  </div>
</div>
