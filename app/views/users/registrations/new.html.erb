<div>  
  <a class="hiddenanchor" id="signin"></a>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Cadastro de usuário</h1>
          <div>            
            <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email", placeholder:"e-mail" %>
          </div>
                    
          <div>            
            <%= f.password_field :password, class:"form-control", placeholder:"Senha" %>
          </div>

          <div>            
            <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password", placeholder:"Confirmação da senha" %>            
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="custom-control custom-checkbox small" style="float: left;" >
              <%= f.check_box :remember_me, class: "custom-control-input" %>
              <%= f.label :remember_me, class:"custom-control-label" %>
            </div>
          <% end %>

          <div>            
            <%= f.submit "Cadastrar-se", class:"btn btn-default btn-success submit", style:"float: none; margin-left: 0px; width: 100%" %>
          </div>

          <div class="clearfix"></div>
          
          <%= render "users/shared/error_messages", resource: resource %>
          
          <div class="separator"></div>
        <%end%>
      </section>
    </div>    
  </div>
</div>