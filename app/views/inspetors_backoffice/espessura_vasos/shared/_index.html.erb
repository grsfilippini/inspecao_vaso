<div class="col-lg-12">    
    <h1 class="h3 mb-2 text-gray-800"><%= t('mensagens.lista_de', model: @espessura_vasos.model_name.human(count: @espessura_vasos.count)) %> &nbsp;<%= @nome_rel %>&nbsp; - <%= @espessura_vasos.total_count %> </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>
                    <%= link_to new_inspetors_backoffice_espessura_vaso_path, class:"btn btn-success btn-sm" do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                </th>
                <th></th>

                <th>Data e hora</th>
                <th>Vaso</th>                
                <th>Proprietaria</th>
                
                
            </tr>
        </thead>
        <tbody> 
            <% @espessura_vasos.each do |r|%>
                <tr>
                    <td style="width: 50px">                        
                        <%= link_to edit_inspetors_backoffice_espessura_vaso_path(r), class:"btn btn-info btn-sm" do %> 
                            <i class="fa fa-edit"></i>
                        <%end%>
                    </td>
                    <td style="width: 50px">
                        <%= link_to inspetors_backoffice_espessura_vaso_path(r.id), 
                                    method: :delete, class:"btn btn-danger btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: r.id)} do %>
                            <i class="fa fa-minus"></i> 
                        <%end%>
                    </td>
                    
                    <td><%= r.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                    <td><%= r.vaso.num_serie %></td>
                    <td><%= r.vaso.proprietaria.nome_curto %></td>                    
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @espessura_vasos %>
    
</div>

