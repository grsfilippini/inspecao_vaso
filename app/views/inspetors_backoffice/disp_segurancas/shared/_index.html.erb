
<div class="table-responsive">    
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>
                    <%= link_to new_inspetors_backoffice_disp_seguranca_path, class:"btn btn-success btn-sm" do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                </th>
                <th>#</th>               
                <th>Fabricante</th>                                
            </tr>
        </thead>
        <tbody> 
            <% @disp_segurancas.each do |d|%>
                <tr>
                    <td style="width: 50px"> 
                        <%= link_to edit_inspetors_backoffice_disp_seguranca_path(d), class:"btn btn-info btn-sm" do %> 
                            <i class="fa fa-edit"></i>
                        <%end%>
                    </td>                    
                    <td> <%= d.serie %> </td>
                    
                    <td> <%= d.cadastro.nome_curto %> </td>
                    
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @disp_segurancas %>
    
</div>