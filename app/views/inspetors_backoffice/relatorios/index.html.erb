<div class="col-lg-12">    
    <h1 class="h3 mb-2 text-gray-800"><%= t('mensagens.lista_de', model: @inspecoes_andamento.model_name.human(count: @inspecoes_andamento.count)) %> &nbsp;<%= @nome_rel %>&nbsp; - <%= @inspecoes_andamento.total_count %> </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>#</th>
                <th># série</th>
                <th>Fabricante</th>
                <th>Proprietaria</th>
                <th align="center">Avaliado PH</th>
                
                <%if @para_imprimir %>
                    <th>Impresso</th>
                <% end %>
                
                <th>
                    <% if true  %>
                        <%= link_to new_admins_backoffice_relatorio_path, class:"btn btn-success btn-circle btn-sm" do %>
                            <i class="fas fa-plus"></i>
                        <% end %>
                    <% end %>
                </th>
            </tr>
        </thead>
        <tbody> 
            <% @inspecoes_andamento.each do |r|%>
                <tr>
                    <td><%= r.id %></td>                    
                    <td><%= r.vaso.num_serie %></td>
                    <td><%= r.vaso.fabricante.nome_curto.truncate(20) %></td>
                    <td><%= r.proprietaria.nome_curto %></td>

                    <td align="center"><% if r.avaliadoph == true %>
                        <%= link_to "SIM", admins_backoffice_avaliarph_path(r) %>
                        <% else %>
                        <%= link_to "NÃO", admins_backoffice_avaliarph_path(r) %>
                        <% end %> </td>
                    
                    <%if @para_imprimir %>
                        <td>                        
                            <%= link_to "Marcar", marcar_como_impresso_admins_backoffice_relatorio_path(r), method: :post, class: "btn btn-primary" %>
                        </td>
                    <% end %>
                    
                    <td style="width: 50px">                        
                        <%= link_to edit_admins_backoffice_relatorio_path(r), class:"btn btn-info btn-circle btn-sm" do %> 
                            <i class="fas fa-edit"></i>
                        <%end%>                        
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @inspecoes_andamento %>
    
</div>

