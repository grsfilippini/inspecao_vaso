
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800"><%= t('mensagens.lista_de', model: @relatorio_dispsegs.model_name.human(count: @relatorio_dispsegs.count)) %> - <%= @relatorio_dispsegs.total_count %> </h1>
</div>

<div class="table-responsive">    
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>
                    <%= link_to new_inspetors_backoffice_relatorio_dispseg_path, class:"btn btn-success btn-sm" do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                </th>
                <th></th>
                <th>Vaso</th>               
                <th>Disp. seg</th>
                <th>Pabre [MPa]</th>
                <th>Proprietaria</th>                
            </tr>
        </thead>
        <tbody> 
            <% @relatorio_dispsegs.each do |r|%>
                <tr>
                    <td style="width: 50px"> 
                        <%= link_to edit_inspetors_backoffice_relatorio_dispseg_path(r), class:"btn btn-info btn-sm" do %> 
                            <i class="fa fa-edit"></i>
                        <%end%>
                    </td>
                    <td style="width: 50px">
                        <%= link_to inspetors_backoffice_relatorio_dispseg_path(r.id), 
                                    method: :delete, class:"btn btn-danger btn-sm", 
                                    data: { confirm: t('mensagens.confirmar_exclusao', item: r.id)} do %>
                            <i class="fa fa-minus"></i> 
                        <%end%>
                    </td>
                    <td> <%= r.vaso.num_serie %> </td>
                    
                    <td> <%= r.disp_seguranca.serie %> </td>
                    
                    <td> <%= r.pressao_ajuste %> </td>
                    
                    <td> <%= r.vaso.proprietaria.nome_curto %> </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @relatorio_dispsegs %>
    
</div>