<div class="col-lg-12">    
    <h1 class="h3 mb-2 text-gray-800"><%= t('mensagens.lista_de', model: @relatorio_dispsegs.model_name.human(count: @relatorio_dispsegs.count)) %> - <%= @relatorio_dispsegs.total_count %> </h1>

    <%= form_with(url:inspetors_backoffice_pesquisa_relatorio_dispseg_path, local: true, method: :get) do |form| %>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                <div class="input-group">      
                    <%= form.text_field :num_serie_vaso, class:"bg-light border-0 small", placeholder: "# sÃ©rie vaso...", class:"form-control" %>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    <%end%>
        
</div> <!-- FIM DO CONTAINER DO FORM -->            
            

<div class="table-responsive">    
    <table class="table table-striped table-bordered table-hover">    
        <thead>
            <tr>
                <th>id</th>
                <th>Vaso</th>               
                <th>Disp. seg</th>
                <th>Proprietaria</th>                
            </tr>
        </thead>
        <tbody> 
            <% @relatorio_dispsegs.each do |r|%>
                <tr>
                    <td> <%= r.id %> </td>
                    
                    <td> <%= r.vaso.num_serie %> </td>
                    
                    <td> <%= r.disp_seguranca.serie %> </td>

                    <td> <%= r.vaso.proprietaria.nome_curto %> </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= paginate @relatorio_dispsegs %>
    
</div>